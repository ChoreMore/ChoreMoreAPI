<%- model_class = Chore -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @chore.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:repeat) %>:</strong></dt>
  <dd><%= @chore.repeat %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @chore.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= @chore.value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:family_id) %>:</strong></dt>
  <dd><%= @chore.family_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kid_id) %>:</strong></dt>
  <dd><%= @chore.kid_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              chores_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_chore_path(@chore), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              chore_path(@chore),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
